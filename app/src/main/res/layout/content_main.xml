<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:atswidget="http://schemas.android.com/apk/res-auto"

    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">


    <app.com.example.dennis.anttest.SpeedometerGauge
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:id="@+id/heartRateMeter"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <app.com.example.dennis.anttest.SpeedometerGauge
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:id="@+id/speedMeter"
        android:layout_below="@+id/heartRateMeter"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blinkingButton"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_000"
        android:alpha="1"
        android:layout_alignBottom="@+id/heartRateMeter"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blinkingButtonBackground"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_000"
        android:layout_alignBottom="@+id/heartRateMeter"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
